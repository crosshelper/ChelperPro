<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChelperPro.Views.AboutUsPage"
              xmlns:i18n="clr-namespace:ChelperPro.Helpers">
    <NavigationPage.TitleView>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Margin="20,25,20,0">
            <Label Text="{i18n:Translate Text=AbCompany}" FontAttributes="Bold" FontSize="22" HorizontalOptions="Center"></Label>
            <Label Text="{i18n:Translate Text=AbVersion}" FontSize="20" HorizontalOptions="CenterAndExpand"></Label>
            <Label Text="{i18n:Translate Text=AbDes}" FontSize="20" HorizontalOptions="CenterAndExpand"></Label>
            <StackLayout>
                <Label Text="{i18n:Translate Text=AbFeedback}"></Label>
                <Editor x:Name="emaileditor" Placeholder="leave feedback here" HeightRequest="200" ></Editor>
                <Button BackgroundColor="#FE5121" TextColor="White" FontAttributes="Bold" FontSize="Medium" Text="Submit" Clicked="Handle_Submit"/>
            </StackLayout>
            <Label Text="{i18n:Translate Text=AbContact}"/>
            <Label Text="{i18n:Translate Text=AbCopyRight}" FontSize="16" Margin="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
