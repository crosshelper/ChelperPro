<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ChelperPro.Views.SignUpTwoPage">
     <NavigationPage.TitleView>
        <Button Text="Cancel" TextColor="White" HorizontalOptions="End" Clicked="Handle_Canceled" FontSize="20"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
           <StackLayout Margin="20,35,20,25">
                  <!--登入 Sign In lable -->
                    <Label Margin="0,0,16,30"
                           Text="Sign Up"
                           TextColor="#FF4E17"
                           FontSize="30"
                           FontAttributes="Bold"
                           HorizontalOptions="End"/>
            <!--标签语love label -->
                    <Label Text="Step 2"
                           TextColor="#888888"
                           FontSize="25"
                           FontAttributes="Bold"
                           HorizontalOptions="Start"/>
            <!--邮箱密码 Email&password input -->
                       <StackLayout VerticalOptions="StartAndExpand">
                            <Label Text="Language" FontSize="22"/>
                            <Entry Placeholder="Priority language"
                                   FontSize="25"
                                   Margin="0,3,0,0"
                                   Completed="SUPPasswordCompleted"/>
                            <Entry Placeholder="Second language"
                                   FontSize="25"
                                   Completed="SUPComfirmPasswordCompleted"/>
                            <Label Text="How long have you been living here?" Margin="0,10,0,0" FontSize="22"/>
                            <Entry Placeholder="5 years"
                                   FontSize="25"
                                   Margin="0,3,0,0"
                                   Completed="SUPComfirmPasswordCompleted"/>        
                        </StackLayout >
           <!--登入按钮 Sign in Button -->   
                    <StackLayout VerticalOptions="EndAndExpand">
                            <Button  
                                    Text="Create account"
                                    TextColor="White"
                                    FontSize="Medium"
                                    FontAttributes="Bold"
                                    BackgroundColor="#FF4E18"
                                    Margin="0,20,0,0"
                                    Clicked="Handle_Next"/>
                    </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
